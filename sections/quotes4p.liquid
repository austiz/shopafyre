{% comment %}ShopaFree{% endcomment %}

<div class="page-width" data-section-id="{{ section.id }}" data-section-type="quotes">
  {% if section.settings.title != blank %}
    <div class="section-header text-center">
      <h2 style="color: {{ custom-color-title-quotes }};">{{ section.settings.title }}</h2>{% comment %}ShopaFree{% endcomment %}
    </div>
  {% endif %}

  {% if section.blocks.size > 0 %}
    <div class="quotes-wrapper quotedots">
      <div class="quotes-slider" id="Quotes-{{ section.id }}" data-count="{{ section.blocks.size }}">
        {% for block in section.blocks %}
          <div class="quotes-slide--{{ block.id }}"  style="color: {{ custom-color-text-quotes }};"  {{ block.shopify_attributes }}>{% comment %}ShopaFree{% endcomment %}
            <blockquote class="quotes-slider__text text-center">
              <span class="quote-icon"  style="fill: {{ custom-color-icon-quotes }};">{% include 'icon-quote' %}</span>{% comment %}ShopaFree{% endcomment %}
              {% if block.settings.quote != blank %}
                <div class="rte-setting">{{ block.settings.quote }}</div>
              {% endif %}
              {% if block.settings.author != blank %}
                <cite>{{ block.settings.author }}</cite>
              {% endif %}
            </blockquote>
          </div>
        {% endfor %}
      </div>
    </div>
  {% endif %}
  
<style>
.quotes-wrapper.quotedots .slick-dots li button::before {
  color: {{ custom-color-dots-quotes }};
  }  
</style>

  {% if section.blocks.size == 0 %}
    {% include 'no-blocks' %}
  {% endif %}
</div>

