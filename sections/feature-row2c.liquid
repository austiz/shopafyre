    padding-right:0px;
    {% elsif section.settings.feature-row_padding_horizontal == 'tiny' %}
    padding-left:15px;
    padding-right:15px;
    {% elsif section.settings.feature-row_padding_horizontal == 'small' %}
    padding-left:35px;
    padding-right:35px;
    {% elsif section.settings.feature-row_padding_horizontal == 'medium' %}
    padding-left:55px;
    padding-right:55px;
