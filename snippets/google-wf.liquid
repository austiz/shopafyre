{% if section.settings.enable_custom_fonts %}
<script type="text/javascript">
    WebFontConfig = {
      google: { families: [ 
        {% if section.settings.font_name_1 != '' %}
          "{{ section.settings.font_name_1 }}:100,200,300,400,500,600,700,800,900"
        {% endif %}
        {% if section.settings.font_name_2 != '' %}
          {% if section.settings.font_name_1 != '' %}
              ,
          {% endif %}
          "{{ section.settings.font_name_2 }}:100,200,300,400,500,600,700,800,900"
        {% endif %}
      ] },
      timeout: 60000 // Set the timeout to 60 seconds
    };
    (function() {
      var wf = document.createElement('script');
      wf.src = ('https:' == document.location.protocol ? 'https' : 'http') +
        '://ajax.googleapis.com/ajax/libs/webfont/1/webfont.js';
      wf.type = 'text/javascript';
      wf.async = 'false';
      var s = document.getElementsByTagName('script')[0];
      s.parentNode.insertBefore(wf, s);
    })(); 
</script>
{% endif %}